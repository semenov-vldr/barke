section.hero
    .hero__container.container
        .hero__content
            h1.hero__title.font-decor Ксения <br> Барке
            .hero__nameplate
                span Психотерапевт
                span &bull;
                span Клинический психолог

            a.hero__tg(href="") telegram-канал

        .hero__img-wrap(data-da=".hero__content, 1100, 1")
            picture.hero__img
                source(srcset='./assets/img/hero-img-mobile.png' media="(max-width: 1100px)")
                img(src='./assets/img/hero-img.png' alt="Фото Ксении Барке")

            span.hero__decor.hero__decor--top
            span.hero__decor.hero__decor--top-right
            span.hero__decor.hero__decor--bottom-right
